{
  "name": "backend",
  "version": "1.0.0",
  "description": "Zygo Backend API Server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.2.0",
    "@supabase/supabase-js": "^2.39.0",
    "argon2": "^0.31.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "ioredis": "^5.3.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "postgres": "^3.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
